%header#header
  .container
    #logo.pull-left
      %h1
        %a.scrollto
          = link_to root_path do
            Todo App
            %span z warstwą API
      / Uncomment below if you prefer to use an image logo
      / <a href="#body"><img src="img/logo.png" alt="" title="" /></a>
    %nav#nav-menu-container
      %ul.nav-menu
        %li{class: active_class(static_pages_homepage_path, true)}
          = link_to 'Strona główna', static_pages_homepage_path
        %li{class: active_class(static_pages_about_path)}
          = link_to 'O pracy', static_pages_about_path
        - if current_user
          %li{class: active_class(todo_lists_path)}
            = link_to 'Moje listy', todo_lists_path
          %li{class: active_class(destroy_user_session_path)}
            = link_to 'Wyloguj się', destroy_user_session_path, method: :delete
        - else
          %li{class: active_class(new_user_session_path)}
            = link_to 'Zaloguj się', new_user_session_path
          %li{class: active_class(new_user_registration_path)}
            = link_to 'Zarejestruj się', new_user_registration_path
    / #nav-menu-container
/ #header