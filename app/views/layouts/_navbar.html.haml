%header#header
  .container
    #logo.pull-left
      %h1
        %a.scrollto{:href => "#body"}
          Todo App
          %span z warstwą API
      / Uncomment below if you prefer to use an image logo
      / <a href="#body"><img src="img/logo.png" alt="" title="" /></a>
    %nav#nav-menu-container
      %ul.nav-menu
        %li.menu-active
          = link_to 'Strona główna', static_pages_homepage_path
        %li
          = link_to 'O pracy', static_pages_about_path
        %li
        - if current_user
          = link_to 'Moje listy', todo_lists_path
          = link_to 'Wyloguj się', destroy_user_session_path, method: :delete
        - else
          = link_to 'Zaloguj się', new_user_session_path
          %li
            = link_to 'Zarejestruj się', new_user_registration_path
    / #nav-menu-container
/ #header